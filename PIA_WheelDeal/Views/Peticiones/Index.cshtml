@model PeticionViewmodel

@{
    ViewData["Title"] = @Html.DisplayFor(modelItem => Model.Producto.Nombre);
}
@* SECCION CON LOS JAVASCRIPT QUE USARÁ ESTA VISTA *@
@section Scripts {
    <script>
        $("#contenedorprincipal").addClass("container mt-5").removeClass("container-fluid")
    </script>
}
@* SECCION CON LOS ESTILOS QUE USARÁ ESTA VISTA *@
@section Styles {
    <link rel="stylesheet" href="~/css/GenPeticion.css" asp-append-version="true" />
}

<div class="row bg-white" id="superior">
    <div class="col">    
        <img class="w-75" src="@Html.DisplayFor(modelItem => Model.Producto.Img)" />
    </div>
    <div class="col border-top border-dark border-5">
        <div class="row">
            <h3>Estas a punto de pedir un . . .</h3>
        </div>
        <div class="row">
            <h2>@Html.DisplayFor(modelItem => Model.Producto.Nombre)</h2>
        </div>
        <div class="row">
            <p>Matricula: <strong>@Html.DisplayFor(modelItem => Model.Producto.Matricula)</strong></p>
        </div>
        <div class="row">
            <h3>Detalles:</h3>
            <p>@Html.DisplayFor(modelItem => Model.Producto.Descripcion)</p>
        </div>
        <div class="row">
            <h3>Indicaciones:</h3>
            <p>Presione el botón para generar una peticion de compra, en breve un empleado le mandará un correo confirmando su cita</p>
        </div>
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Peticion.IdProd" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Peticion de Compra" class="btn btn-dark" />
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
