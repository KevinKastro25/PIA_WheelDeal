@model PIA_WheelDeal.Models.dbModels.PeticionCompra

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PeticionCompra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdInd" class="control-label"></label>
                <select asp-for="IdInd" class="form-control" asp-items="ViewBag.IdInd" ></select>
            </div>
            <div class="form-group">
                <label asp-for="IdProd" class="control-label"></label>
                <select asp-for="IdProd" class="form-control" asp-items="ViewBag.IdProd" ></select>
            </div>
            <div class="form-group">
                <label asp-for="IdStatus" class="control-label"></label>
                <select asp-for="IdStatus" class="form-control" asp-items="ViewBag.IdStatus" ></select>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" id="fewcha" autocomplete="on" class="form-control"  />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class ="form-control" asp-items="ViewBag.IdEmpleado"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Generar Peticion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        var date = new Date()
        var format = moment(date).format("YYYY-MM-DDT00:mm")
        $("#fewcha").val(format)

        
      
    </script>
}
